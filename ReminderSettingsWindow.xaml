<Window x:Class="TimeTask.ReminderSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TimeTask"
        Title="{local:Loc Key=ReminderSettings_WindowTitle}" Height="760" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SettingGroupStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="{local:Loc Key=ReminderSettings_Header}" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="#333"
                   Margin="0,0,0,20"/>
        
        <!-- 设置内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 提醒频率设置 -->
                <Border Style="{StaticResource SettingGroupStyle}">
                    <StackPanel>
                        <TextBlock Text="{local:Loc Key=ReminderSettings_GroupFrequency}"
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#333"
                                   Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="{local:Loc Key=ReminderSettings_FirstWarningLabel}" 
                                       VerticalAlignment="Center"
                                       Margin="0,5"/>
                            <TextBox x:Name="FirstWarningDaysTextBox" 
                                     Grid.Row="0" Grid.Column="1"
                                     Text="{Binding FirstWarningAfterDays}"
                                     Margin="5"
                                     Padding="5"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" 
                                       Text="{local:Loc Key=ReminderSettings_UnitDay}" 
                                       VerticalAlignment="Center"
                                       Margin="5,0"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="{local:Loc Key=ReminderSettings_SecondWarningLabel}" 
                                       VerticalAlignment="Center"
                                       Margin="0,5"/>
                            <TextBox x:Name="SecondWarningDaysTextBox" 
                                     Grid.Row="1" Grid.Column="1"
                                     Text="{Binding SecondWarningAfterDays}"
                                     Margin="5"
                                     Padding="5"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" 
                                       Text="{local:Loc Key=ReminderSettings_UnitDay}" 
                                       VerticalAlignment="Center"
                                       Margin="5,0"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="{local:Loc Key=ReminderSettings_StaleThresholdLabel}" 
                                       VerticalAlignment="Center"
                                       Margin="0,5"/>
                            <TextBox x:Name="StaleTaskThresholdDaysTextBox" 
                                     Grid.Row="2" Grid.Column="1"
                                     Text="{Binding StaleTaskThresholdDays}"
                                     Margin="5"
                                     Padding="5"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" 
                                       Text="{local:Loc Key=ReminderSettings_UnitDay}" 
                                       VerticalAlignment="Center"
                                       Margin="5,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- 提醒行为设置 -->
                <Border Style="{StaticResource SettingGroupStyle}">
                    <StackPanel>
                        <TextBlock Text="{local:Loc Key=ReminderSettings_GroupBehavior}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#333"
                                   Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="{local:Loc Key=ReminderSettings_MaxWarningsLabel}" 
                                       VerticalAlignment="Center"
                                       Margin="0,5"/>
                            <TextBox x:Name="MaxInactiveWarningsTextBox" 
                                     Grid.Row="0" Grid.Column="1"
                                     Text="{Binding MaxInactiveWarnings}"
                                     Margin="5"
                                     Padding="5"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" 
                                       Text="{local:Loc Key=ReminderSettings_UnitTimes}" 
                                       VerticalAlignment="Center"
                                       Margin="5,0"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="{local:Loc Key=ReminderSettings_CheckIntervalLabel}" 
                                       VerticalAlignment="Center"
                                       Margin="0,5"/>
                            <TextBox x:Name="ReminderCheckIntervalTextBox" 
                                     Grid.Row="1" Grid.Column="1"
                                     Text="{Binding ReminderCheckIntervalMinutes}"
                                     Margin="5"
                                     Padding="5"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" 
                                       Text="{local:Loc Key=ReminderSettings_UnitMinutes}" 
                                       VerticalAlignment="Center"
                                       Margin="5,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 主动协同控制 -->
                <Border Style="{StaticResource SettingGroupStyle}">
                    <StackPanel>
                        <TextBlock Text="{local:Loc Key=ReminderSettings_GroupProactiveControl}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="#333"
                                   Margin="0,0,0,10"/>

                        <CheckBox Content="{local:Loc Key=ReminderSettings_ProactiveEnabled}"
                                  IsChecked="{Binding ProactiveAssistEnabled}"
                                  Margin="0,4"/>
                        <CheckBox Content="{local:Loc Key=ReminderSettings_BehaviorLearningEnabled}"
                                  IsChecked="{Binding BehaviorLearningEnabled}"
                                  Margin="0,4"/>
                        <CheckBox Content="{local:Loc Key=ReminderSettings_StuckNudgesEnabled}"
                                  IsChecked="{Binding StuckNudgesEnabled}"
                                  Margin="0,4"/>
                        <CheckBox Content="{local:Loc Key=ReminderSettings_LlmSkillAssistEnabled}"
                                  IsChecked="{Binding LlmSkillAssistEnabled}"
                                  Margin="0,4,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="{local:Loc Key=ReminderSettings_QuietStartLabel}"
                                       VerticalAlignment="Center"
                                       Margin="0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding QuietHoursStart}"
                                     Margin="5"
                                     Padding="5"/>
                            <TextBlock Grid.Row="0" Grid.Column="2"
                                       Text="{local:Loc Key=ReminderSettings_UnitHourRange}"
                                       VerticalAlignment="Center"
                                       Margin="5,0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="{local:Loc Key=ReminderSettings_QuietEndLabel}"
                                       VerticalAlignment="Center"
                                       Margin="0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding QuietHoursEnd}"
                                     Margin="5"
                                     Padding="5"/>
                            <TextBlock Grid.Row="1" Grid.Column="2"
                                       Text="{local:Loc Key=ReminderSettings_UnitHourRange}"
                                       VerticalAlignment="Center"
                                       Margin="5,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 主动协同指标 -->
                <Border Style="{StaticResource SettingGroupStyle}">
                    <StackPanel>
                        <TextBlock Text="{local:Loc Key=ReminderSettings_GroupMetrics}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="#333"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{local:Loc Key=ReminderSettings_MetricWindow}" Margin="0,4" Foreground="#555"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MetricsWindowLabel}" Margin="0,4" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{local:Loc Key=ReminderSettings_MetricHitRate}" Margin="0,4" Foreground="#555"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SuggestionHitRateText}" Margin="0,4" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="{local:Loc Key=ReminderSettings_MetricInterruption}" Margin="0,4" Foreground="#555"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding InterruptionIndexText}" Margin="0,4" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="{local:Loc Key=ReminderSettings_MetricTopAction}" Margin="0,4" Foreground="#555"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TopEffectiveActionText}" Margin="0,4" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="{local:Loc Key=ReminderSettings_MetricOutcome}" Margin="0,4" Foreground="#555"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SuggestionOutcomeText}" Margin="0,4" TextWrapping="Wrap"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="{local:Loc Key=ReminderSettings_MetricRecommendedStuck}" Margin="0,4" Foreground="#555"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding RecommendedStuckThresholdText}" Margin="0,4" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="{local:Loc Key=ReminderSettings_MetricRecommendedDaily}" Margin="0,4" Foreground="#555"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding RecommendedDailyNudgeLimitText}" Margin="0,4" FontWeight="SemiBold"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- 说明信息 -->
                <Border Style="{StaticResource SettingGroupStyle}">
                    <StackPanel>
                        <TextBlock Text="{local:Loc Key=ReminderSettings_GroupHelp}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#333"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   LineHeight="18">
                            <Run Text="{local:Loc Key=ReminderSettings_Help1}"/><LineBreak/>
                            <Run Text="{local:Loc Key=ReminderSettings_Help2}"/><LineBreak/>
                            <Run Text="{local:Loc Key=ReminderSettings_Help3}"/><LineBreak/>
                            <Run Text="{local:Loc Key=ReminderSettings_Help4}"/><LineBreak/>
                            <Run Text="{local:Loc Key=ReminderSettings_Help5}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="SaveButton" 
                    Content="{local:Loc Key=ReminderSettings_ButtonSave}" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="SaveButton_Click"/>
            
            <Button x:Name="CancelButton" 
                    Content="{local:Loc Key=ReminderSettings_ButtonCancel}" 
                    Background="#F44336"
                    Style="{StaticResource ModernButtonStyle}"
                    Click="CancelButton_Click"/>
            
            <Button x:Name="ResetButton" 
                    Content="{local:Loc Key=ReminderSettings_ButtonReset}" 
                    Background="#FF9800"
                    Style="{StaticResource ModernButtonStyle}"
                    Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
