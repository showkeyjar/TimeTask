<Window x:Class="TimeTask.SkillManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TimeTask"
        Title="{local:Loc Key=SkillWindow_Title}" Height="540" Width="920"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{local:Loc Key=SkillWindow_Intro}"
                       Foreground="#555"
                       TextWrapping="Wrap"/>
            <Border Background="#F7F7F7" CornerRadius="6" Padding="10" Margin="0,8,0,0" BorderBrush="#E0E0E0" BorderThickness="1">
                <TextBlock Foreground="#444" TextWrapping="Wrap">
                    <Run Text="{local:Loc Key=SkillWindow_HowTo1}"/>
                    <LineBreak/>
                    <Run Text="{local:Loc Key=SkillWindow_HowTo2}"/>
                    <LineBreak/>
                    <Run Text="{local:Loc Key=SkillWindow_HowTo3}"/>
                    <LineBreak/>
                    <Run Text="{local:Loc Key=SkillWindow_HowTo4}"/>
                    <LineBreak/>
                    <Run Text="{local:Loc Key=SkillWindow_HowTo5}"/>
                </TextBlock>
            </Border>
            <Border x:Name="FirstTimeHintBanner"
                    Background="#FFF7E6"
                    CornerRadius="6"
                    Padding="8"
                    Margin="0,8,0,0"
                    BorderBrush="#FFD7A3"
                    BorderThickness="1"
                    Visibility="Collapsed">
                <TextBlock Foreground="#6B4E16" TextWrapping="Wrap"
                           Text="{local:Loc Key=SkillWindow_FirstHint}"/>
            </Border>
        </StackPanel>

        <DataGrid x:Name="SkillsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="{local:Loc Key=Skill_Column_Enable}" Width="60" Binding="{Binding Enabled, Mode=TwoWay}"/>
                <DataGridTextColumn Header="{local:Loc Key=Skill_Column_Name}" Width="130" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="{local:Loc Key=Skill_Column_Description}" Width="250" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="{local:Loc Key=Skill_Column_Scenario}" Width="*" Binding="{Binding Scenario}"/>
                <DataGridTextColumn Header="{local:Loc Key=Skill_Column_Shown30d}" Width="90" Binding="{Binding Shown}"/>
                <DataGridTextColumn Header="{local:Loc Key=Skill_Column_Accepted}" Width="80" Binding="{Binding Accepted}"/>
                <DataGridTextColumn Header="{local:Loc Key=Skill_Column_Deferred}" Width="80" Binding="{Binding Deferred}"/>
                <DataGridTextColumn Header="{local:Loc Key=Skill_Column_Rejected}" Width="80" Binding="{Binding Rejected}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{local:Loc Key=Button_SelectAll}" Width="72" Height="32" Margin="0,0,8,0" Click="EnableAll_Click"/>
            <Button Content="{local:Loc Key=Button_DeselectAll}" Width="72" Height="32" Margin="0,0,8,0" Click="DisableAll_Click"/>
            <Button Content="{local:Loc Key=Button_Import}" Width="72" Height="32" Margin="0,0,8,0" Click="Import_Click"/>
            <Button Content="{local:Loc Key=Button_Export}" Width="72" Height="32" Margin="0,0,8,0" Click="Export_Click"/>
            <Button Content="{local:Loc Key=Button_Save}" Width="72" Height="32" Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="{local:Loc Key=Button_Close}" Width="72" Height="32" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
