<Window x:Class="TimeTask.LearningPlanManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="学习计划管理" Height="650" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#E3F2FD" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Name="SubjectTextBlock" Text="学习科目" FontSize="20" FontWeight="Bold" Foreground="#1976D2"/>
                    <TextBlock Name="GoalTextBlock" Text="学习目标" FontSize="14" Foreground="#424242" Margin="0,5,0,0" TextWrapping="Wrap"/>
                    <TextBlock Name="DurationTextBlock" Text="学习时长" FontSize="12" Foreground="#757575" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="完成进度" FontSize="12" Foreground="#757575" HorizontalAlignment="Center"/>
                    <TextBlock Name="ProgressTextBlock" Text="0%" FontSize="28" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                    <TextBlock Name="ProgressDetailTextBlock" Text="0/0 阶段" FontSize="11" Foreground="#757575" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <ProgressBar Grid.Row="1" Name="ProgressBar" Height="8" Margin="0,0,0,10" Minimum="0" Maximum="100" Value="0" Foreground="#4CAF50"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="学习里程碑" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
            <TextBlock Name="MilestoneCountTextBlock" Text="(0 个里程碑)" FontSize="12" Foreground="#757575" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <DataGrid Grid.Row="3" Name="MilestonesDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" CanUserDeleteRows="False" 
                  SelectionMode="Single" GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="阶段" Binding="{Binding StageNumber}" Width="60"/>
                <DataGridTextColumn Header="阶段名称" Binding="{Binding StageName}" Width="*"/>
                <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="200"/>
                <DataGridTextColumn Header="目标日期" Binding="{Binding TargetDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                <DataGridCheckBoxColumn Header="已完成" Binding="{Binding IsCompleted}" Width="70"/>
                <DataGridTextColumn Header="完成日期" Binding="{Binding CompletedDate, StringFormat=yyyy-MM-dd}" Width="100"/>
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                            <Setter Property="Background" Value="#E8F5E9"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsCompleted}" Value="False">
                            <Setter Property="Background" Value="White"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,10">
            <Button Name="ActivateButton" Content="激活当前阶段" Width="120" Height="30" Margin="0,0,10,0" Click="ActivateButton_Click"/>
            <Button Name="MarkCompleteButton" Content="标记为完成" Width="120" Height="30" Margin="0,0,10,0" Click="MarkCompleteButton_Click"/>
            <Button Name="DeleteButton" Content="删除计划" Width="100" Height="30" Margin="0,0,10,0" Click="DeleteButton_Click"/>
            <Button Name="CloseButton" Content="关闭" Width="80" Height="30" Click="CloseButton_Click"/>
        </StackPanel>

        <TextBlock Grid.Row="5" Name="StatusTextBlock" Text="提示：选中里程碑后点击'激活当前阶段'可将其添加到任务列表" 
                   Foreground="#757575" FontSize="11" FontStyle="Italic" HorizontalAlignment="Left"/>
    </Grid>
</Window>