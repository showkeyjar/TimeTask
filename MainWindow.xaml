<Window x:Name="MainWindow1" x:Class="TimeTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTask"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None" 
        Title="时间管理" Width="810" Height="630" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded"
        LocationChanged="location_Save"
        Background="Transparent" ShowInTaskbar="False">
    <Grid x:Name="TaskGrid" Width="780" Height="630"> <!-- Adjusted height for new button row -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Row 0 for labels and delete buttons for row 1 of datagrids -->
            <RowDefinition Height="*"/>    <!-- Row 1 for first row of datagrids -->
            <RowDefinition Height="Auto"/> <!-- Row 2 for labels and delete buttons for row 2 of datagrids -->
            <RowDefinition Height="*"/>    <!-- Row 3 for second row of datagrids -->
            <RowDefinition Height="Auto"/> <!-- Row 4 for the new Add Task button -->
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="重要且紧急" HorizontalAlignment="Left" Margin="5,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Foreground="White" />
        <Button Grid.Row="0" x:Name="del1" Content="-" HorizontalAlignment="Left" Margin="365,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Width="20" Click="del1_Click"/>
        <DataGrid Grid.Row="1" x:Name="task1" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Width="380" SelectionChanged="task1_SelectionChanged"/>
        <Label Grid.Row="0" Content="重要不紧急" HorizontalAlignment="Left" Margin="395,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Foreground="White" />
        <Button Grid.Row="0" x:Name="del2" Content="-" HorizontalAlignment="Left" Margin="755,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Width="20" Click="del2_Click"/>
        <DataGrid Grid.Row="1" x:Name="task2" HorizontalAlignment="Left" Margin="395,5,0,0" VerticalAlignment="Top" Width="380" SelectionChanged="task2_SelectionChanged"/>
        <Label Grid.Row="2" Content="不重要但紧急" HorizontalAlignment="Left" Margin="5,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Foreground="White" />
        <Button Grid.Row="2" x:Name="del3" Content="-" HorizontalAlignment="Left" Margin="365,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Width="20" Click="del3_Click"/>
        <DataGrid Grid.Row="3" x:Name="task3" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Width="380" SelectionChanged="task3_SelectionChanged"/>
        <Label Grid.Row="2" Content="不重要不紧急" HorizontalAlignment="Left" Margin="395,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Foreground="White" />
        <Button Grid.Row="2" x:Name="del4" Content="-" HorizontalAlignment="Left" Margin="755,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Width="20" Click="del4_Click"/>
        <DataGrid Grid.Row="3" x:Name="task4" HorizontalAlignment="Left" Margin="395,5,0,0" VerticalAlignment="Top" Width="380" SelectionChanged="task4_SelectionChanged"/>
        
        <Button Grid.Row="4" x:Name="AddNewTaskButton" Content="Add New Task" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="30" Click="AddNewTaskButton_Click" Margin="0,10,0,10" FontWeight="SemiBold"/>
    </Grid>
</Window>
