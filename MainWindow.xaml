<Window x:Name="MainWindow1" x:Class="TimeTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTask"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None" 
        Title="{local:Loc Key=Window_Main_Title}" Width="810" Height="630" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded"
        LocationChanged="location_Save"
        Background="Transparent" ShowInTaskbar="False">
    <Window.Resources>
        <local:TaskWithReminderIndicatorConverter x:Key="TaskReminderConverter"/>
        <!-- Converter to check if a value is greater than a parameter -->
        <local:IsGreaterThanConverter x:Key="IsGreaterThanConverter" />
        <local:NonEmptyStringToVisibilityConverter x:Key="NonEmptyStringToVisibilityConverter" />
        <Style TargetType="DataGridRow" x:Key="StickyNoteRowStyle">
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridRow_PreviewMouseLeftButtonDown"/>
            <EventSetter Event="PreviewMouseMove" Handler="DataGridRow_PreviewMouseMove"/>
            <EventSetter Event="PreviewMouseLeftButtonUp" Handler="DataGridRow_PreviewMouseLeftButtonUp"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Border x:Name="DGR_Border" CornerRadius="5" Background="#FFFFE0" Padding="5" Margin="3,5,3,5" SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" Color="Gray" Opacity="0.5" BlurRadius="3"/>
                            </Border.Effect>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver"/>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="DGR_Border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FFFBFFAA" Duration="0"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="SelectedUnfocused">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="DGR_Border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FFFDFFAA" Duration="0"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <SelectiveScrollingGrid Grid.Column="0">
                                    <SelectiveScrollingGrid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </SelectiveScrollingGrid.ColumnDefinitions>
                                    <SelectiveScrollingGrid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </SelectiveScrollingGrid.RowDefinitions>
                                    <DataGridCellsPresenter Grid.Column="1" ItemsPanel="{TemplateBinding ItemsPanel}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    <DataGridDetailsPresenter Grid.Column="1" Grid.Row="1" SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" Visibility="{TemplateBinding DetailsVisibility}"/>
                                    <DataGridRowHeader Grid.RowSpan="2" SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical" Visibility="{Binding HeadersVisibility, ConverterParameter={x:Static DataGridHeadersVisibility.Row}, Converter={x:Static DataGrid.HeadersVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                </SelectiveScrollingGrid>
                                <Button x:Name="PART_ReminderButton" Grid.Column="1" Content="â°" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-2,2,0" Click="EditReminderTime_Click" Background="Transparent" BorderBrush="{x:Null}" FontWeight="Bold" Foreground="Gray" ToolTip="{local:Loc Key=Tooltip_EditReminderTime}" Visibility="{Binding Task, Converter={StaticResource NonEmptyStringToVisibilityConverter}}"/>
                                <Button x:Name="PART_DecomposeButton" Grid.Column="2" Content="ðŸ§©" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-2,2,0" Click="QuickDecomposeTask_Click" Background="Transparent" BorderBrush="{x:Null}" FontWeight="Bold" Foreground="Gray" ToolTip="{local:Loc Key=Tooltip_QuickDecompose}" Visibility="{Binding Task, Converter={StaticResource NonEmptyStringToVisibilityConverter}}"/>
                                <Button x:Name="PART_ThinkingButton" Grid.Column="3" Content="ðŸ§ " Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-2,2,0" Click="ToolQuickAction_Click" Background="Transparent" BorderBrush="{x:Null}" FontWeight="Bold" Foreground="Gray" ToolTip="{local:Loc Key=Tooltip_ThinkingTools}" Visibility="{Binding Task, Converter={StaticResource NonEmptyStringToVisibilityConverter}}"/>
                                <Button x:Name="PART_DeleteButton" Grid.Column="4" Content="X" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-2,-2,0" Click="DeleteTaskRow_Click" Background="Transparent" BorderBrush="{x:Null}" FontWeight="Bold" Foreground="Gray" Visibility="{Binding Task, Converter={StaticResource NonEmptyStringToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding InactiveWarningCount}" Value="0">
                                <!-- Default background is #FFFFE0 set on DGR_Border -->
                            </DataTrigger>
                            <DataTrigger Binding="{Binding InactiveWarningCount}" Value="1">
                                <Setter TargetName="DGR_Border" Property="Background" Value="#FFFFCC" /> <!-- Slightly more yellow/orange for 1 warning -->
                            </DataTrigger>
                            <DataTrigger Binding="{Binding InactiveWarningCount}" Value="2">
                                <Setter TargetName="DGR_Border" Property="Background" Value="#FFFFB3" /> <!-- More orange for 2 warnings -->
                            </DataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding InactiveWarningCount, Converter={StaticResource IsGreaterThanConverter}, ConverterParameter=2}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="DGR_Border" Property="Background" Value="#FFFAA0A0" /> <!-- LightCoral/Reddish for 3+ warnings -->
                            </MultiDataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid x:Name="TaskGrid" Width="780" Height="630">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>    <!-- Row 0 for Quadrant 1 & 2 (combines old Row 0 and 1) -->
            <RowDefinition Height="*"/>    <!-- Row 1 for Quadrant 3 & 4 (combines old Row 2 and 3) -->
        </Grid.RowDefinitions>

        <!-- Settings Button -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Panel.ZIndex="100" Margin="0,10,10,0">
            <!-- Active Long-Term Goal Display -->
            <Button x:Name="ActiveLongTermGoalDisplay"
                    Visibility="Collapsed"
                    Width="Auto"
                    Height="30"
                    Margin="0,0,10,0"
                    Padding="10,0"
                    FontSize="14"
                    ToolTip="{local:Loc Key=Tooltip_ActiveLongTermGoal}"
                    Click="ActiveLongTermGoalDisplay_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#DDDDDD"/>
                        <Setter Property="BorderBrush" Value="#AAAAAA"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ActiveLongTermGoalName" Text="{local:Loc Key=ActiveLongGoal_DefaultName}" VerticalAlignment="Center"/>
                    <Border Background="Red" CornerRadius="8" Margin="5,0,0,0" Padding="5,2" VerticalAlignment="Center">
                        <TextBlock x:Name="LongTermGoalBadge" Text="0" Foreground="White" FontSize="10" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Button>

            <Button x:Name="SettingsButton"
                    Content="âš™"
                    Width="30"
                    Height="30"
                    FontSize="16"
                    FontWeight="Bold"
                    ToolTip="{local:Loc Key=Tooltip_OpenSettings}"
                    Click="SettingsButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#DDDDDD"/>
                        <Setter Property="BorderBrush" Value="#AAAAAA"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="DraftsButton"
                    Width="30"
                    Height="30"
                    FontSize="16"
                    FontWeight="Bold"
                    ToolTip="{local:Loc Key=Tooltip_ViewDrafts}"
                    Click="DraftsButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#DDDDDD"/>
                        <Setter Property="BorderBrush" Value="#AAAAAA"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Grid>
                    <TextBlock Text="ðŸ“‹" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Border x:Name="DraftBadge"
                            Background="#E53935"
                            CornerRadius="8"
                            MinWidth="16"
                            Height="16"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-4,-4,0"
                            Visibility="Collapsed">
                        <TextBlock x:Name="DraftBadgeText"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Padding="4,0"/>
                    </Border>
                </Grid>
            </Button>

        </StackPanel>

        <!-- Quadrant 1: Important & Urgent -->
        <Border Grid.Row="0" Grid.Column="0" Background="#33FFDADA" CornerRadius="5" Padding="5" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                    <Label Content="{local:Loc Key=Quadrant_ImportantUrgent}" HorizontalAlignment="Left" Margin="5,0,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Foreground="White" />
                    <Button x:Name="AddUrgentImportantTaskButton" Content="+" Tag="0" Click="AddQuickTask_Click" Width="25" Height="25" FontSize="14" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center" Background="#AAFFDADA" BorderBrush="#88FFDADA" Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="12.5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
                <DataGrid Grid.Row="1" x:Name="task1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="task1_SelectionChanged" Background="Transparent" HeadersVisibility="None" RowStyle="{StaticResource StickyNoteRowStyle}" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowDrop="True" DragEnter="Task_DragEnter" DragOver="Task_DragOver" Drop="Quadrant_Drop" CellEditEnding="DataGrid_CellEditEnding" MouseDoubleClick="DataGrid_MouseDoubleClick_AddTask">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="{local:Loc Key=Task_Header}" Width="*" MaxWidth="325">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource TaskReminderConverter}">
                                                <Binding Path="Task"/>
                                                <Binding Path="ReminderTime"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Task, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Quadrant 2: Important & Not Urgent -->
        <Border Grid.Row="0" Grid.Column="1" Background="#33D4E8FF" CornerRadius="5" Padding="5" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Label Content="{local:Loc Key=Quadrant_ImportantNotUrgent}" HorizontalAlignment="Left" Margin="5,0,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Foreground="White" />
                        <Button x:Name="AddImportantNotUrgentTaskButton" Content="+" Tag="1" Click="AddQuickTask_Click" Width="25" Height="25" FontSize="14" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center" Background="#AAD4E8FF" BorderBrush="#88D4E8FF" Foreground="White">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12.5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <Button x:Name="VoiceStatusButton"
                            Grid.Column="2"
                            Width="Auto"
                            Height="26"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Padding="8,0"
                            Margin="0,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsHitTestVisible="False"
                            ToolTip="{local:Loc Key=Tooltip_VoiceStatus}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="13"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DDDDDD"/>
                                <Setter Property="BorderBrush" Value="#AAAAAA"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Style>
                        </Button.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="VoiceStatusIcon"
                                       Text="ðŸ‘‚"
                                       Grid.Column="0"
                                       Margin="0,0,5,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <ScaleTransform x:Name="VoiceStatusScale" ScaleX="1" ScaleY="1"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock x:Name="VoiceStatusText"
                                       Grid.Column="1"
                                        Text="{local:Loc Key=Voice_TextUnknown}"
                                       VerticalAlignment="Center"
                                       Foreground="#666666"/>
                            <Ellipse x:Name="VoiceStatusDot"
                                     Grid.Column="2"
                                     Width="7"
                                     Height="7"
                                     Fill="#888888"
                                     VerticalAlignment="Center"
                                     Margin="6,0,0,0"/>
                        </Grid>
                    </Button>
                </Grid>
                <DataGrid Grid.Row="1" x:Name="task2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="task2_SelectionChanged" Background="Transparent" HeadersVisibility="None" RowStyle="{StaticResource StickyNoteRowStyle}" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowDrop="True" DragEnter="Task_DragEnter" DragOver="Task_DragOver" Drop="Quadrant_Drop" CellEditEnding="DataGrid_CellEditEnding" MouseDoubleClick="DataGrid_MouseDoubleClick_AddTask">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="{local:Loc Key=Task_Header}" Width="*" MaxWidth="325">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource TaskReminderConverter}">
                                                <Binding Path="Task"/>
                                                <Binding Path="ReminderTime"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Task, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Quadrant 3: Not Important & Urgent -->
        <Border Grid.Row="1" Grid.Column="0" Background="#33D9FFD9" CornerRadius="5" Padding="5" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                    <Label Content="{local:Loc Key=Quadrant_NotImportantUrgent}" HorizontalAlignment="Left" Margin="5,0,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Foreground="White" />
                    <Button x:Name="AddNotImportantUrgentTaskButton" Content="+" Tag="2" Click="AddQuickTask_Click" Width="25" Height="25" FontSize="14" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center" Background="#AAD9FFD9" BorderBrush="#88D9FFD9" Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="12.5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
                <DataGrid Grid.Row="1" x:Name="task3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="task3_SelectionChanged" Background="Transparent" HeadersVisibility="None" RowStyle="{StaticResource StickyNoteRowStyle}" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowDrop="True" DragEnter="Task_DragEnter" DragOver="Task_DragOver" Drop="Quadrant_Drop" CellEditEnding="DataGrid_CellEditEnding" MouseDoubleClick="DataGrid_MouseDoubleClick_AddTask">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="{local:Loc Key=Task_Header}" Width="*" MaxWidth="325">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource TaskReminderConverter}">
                                                <Binding Path="Task"/>
                                                <Binding Path="ReminderTime"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Task, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Quadrant 4: Not Important & Not Urgent -->
        <Border Grid.Row="1" Grid.Column="1" Background="#33E0E0E0" CornerRadius="5" Padding="5" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                    <Label Content="{local:Loc Key=Quadrant_NotImportantNotUrgent}" HorizontalAlignment="Left" Margin="5,0,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Foreground="White" />
                    <Button x:Name="AddNotImportantNotUrgentTaskButton" Content="+" Tag="3" Click="AddQuickTask_Click" Width="25" Height="25" FontSize="14" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center" Background="#AAE0E0E0" BorderBrush="#88E0E0E0" Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="12.5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
                <DataGrid Grid.Row="1" x:Name="task4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="task4_SelectionChanged" Background="Transparent" HeadersVisibility="None" RowStyle="{StaticResource StickyNoteRowStyle}" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowDrop="True" DragEnter="Task_DragEnter" DragOver="Task_DragOver" Drop="Quadrant_Drop" CellEditEnding="DataGrid_CellEditEnding" MouseDoubleClick="DataGrid_MouseDoubleClick_AddTask">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="{local:Loc Key=Task_Header}" Width="*" MaxWidth="325">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource TaskReminderConverter}">
                                                <Binding Path="Task"/>
                                                <Binding Path="ReminderTime"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Task, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
    </Grid>
</Window>
