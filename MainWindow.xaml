<Window x:Name="MainWindow1" x:Class="TimeTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTask"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None" 
        Title="时间管理" Width="810" Height="630" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded"
        LocationChanged="location_Save"
        Background="Transparent" ShowInTaskbar="False">
    <Grid x:Name="TaskGrid" Width="780" Height="630"> <!-- Adjusted height for new button row -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Row 0 for labels and delete buttons for row 1 of datagrids -->
            <RowDefinition Height="*"/>    <!-- Row 1 for first row of datagrids -->
            <RowDefinition Height="Auto"/> <!-- Row 2 for labels and delete buttons for row 2 of datagrids -->
            <RowDefinition Height="*"/>    <!-- Row 3 for second row of datagrids -->
            <RowDefinition Height="Auto"/> <!-- Row 4 for the new Add Task button -->
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="重要且紧急" HorizontalAlignment="Left" Margin="5,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Foreground="White" />
        <!-- del1 button removed -->
        <DataGrid Grid.Row="1" x:Name="task1" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Width="380" SelectionChanged="task1_SelectionChanged" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Done" Binding="{Binding IsActive}" Width="Auto"/>
                <DataGridTextColumn Header="Task Description" Binding="{Binding Task}" Width="*"/>
                <DataGridTextColumn Header="Importance" Binding="{Binding Importance}" Width="Auto"/>
                <DataGridTextColumn Header="Urgency" Binding="{Binding Urgency}" Width="Auto"/>
                <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModifiedDate, StringFormat='yyyy-MM-dd HH:mm'}" Width="Auto"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Grid.Row="0" Content="重要不紧急" HorizontalAlignment="Left" Margin="395,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Foreground="White" />
        <!-- del2 button removed -->
        <DataGrid Grid.Row="1" x:Name="task2" HorizontalAlignment="Left" Margin="395,5,0,0" VerticalAlignment="Top" Width="380" SelectionChanged="task2_SelectionChanged" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Done" Binding="{Binding IsActive}" Width="Auto"/>
                <DataGridTextColumn Header="Task Description" Binding="{Binding Task}" Width="*"/>
                <DataGridTextColumn Header="Importance" Binding="{Binding Importance}" Width="Auto"/>
                <DataGridTextColumn Header="Urgency" Binding="{Binding Urgency}" Width="Auto"/>
                <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModifiedDate, StringFormat='yyyy-MM-dd HH:mm'}" Width="Auto"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Grid.Row="2" Content="不重要但紧急" HorizontalAlignment="Left" Margin="5,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Foreground="White" />
        <!-- del3 button removed -->
        <DataGrid Grid.Row="3" x:Name="task3" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Width="380" SelectionChanged="task3_SelectionChanged" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Done" Binding="{Binding IsActive}" Width="Auto"/>
                <DataGridTextColumn Header="Task Description" Binding="{Binding Task}" Width="*"/>
                <DataGridTextColumn Header="Importance" Binding="{Binding Importance}" Width="Auto"/>
                <DataGridTextColumn Header="Urgency" Binding="{Binding Urgency}" Width="Auto"/>
                <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModifiedDate, StringFormat='yyyy-MM-dd HH:mm'}" Width="Auto"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Grid.Row="2" Content="不重要不紧急" HorizontalAlignment="Left" Margin="395,5,0,0" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Foreground="White" />
        <!-- del4 button removed -->
        <DataGrid Grid.Row="3" x:Name="task4" HorizontalAlignment="Left" Margin="395,5,0,0" VerticalAlignment="Top" Width="380" SelectionChanged="task4_SelectionChanged" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Done" Binding="{Binding IsActive}" Width="Auto"/>
                <DataGridTextColumn Header="Task Description" Binding="{Binding Task}" Width="*"/>
                <DataGridTextColumn Header="Importance" Binding="{Binding Importance}" Width="Auto"/>
                <DataGridTextColumn Header="Urgency" Binding="{Binding Urgency}" Width="Auto"/>
                <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModifiedDate, StringFormat='yyyy-MM-dd HH:mm'}" Width="Auto"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="AddNewTaskButton" Content="Add New Task" Width="150" Height="30" Click="AddNewTaskButton_Click" FontWeight="SemiBold" Margin="5"/>
            <Button x:Name="DeleteSelectedTaskButton" Content="Delete Selected Task" Width="150" Height="30" Click="DeleteSelectedTaskButton_Click" FontWeight="SemiBold" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
