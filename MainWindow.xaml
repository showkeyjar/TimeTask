<Window x:Name="MainWindow1" x:Class="TimeTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTask"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None" 
        Title="时间管理" Width="1280" Height="900" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded"
        LocationChanged="location_Save"
        Background="Transparent" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Grid x:Name="TaskGrid" Width="1240" Height="860">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/> <!-- Row 0 for labels -->
            <RowDefinition Height="*"/>  <!-- Row 1 for first row of datagrids -->
            <RowDefinition Height="30"/> <!-- Row 2 for labels -->
            <RowDefinition Height="*"/>  <!-- Row 3 for second row of datagrids -->
            <RowDefinition Height="60"/> <!-- Row 4 for buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- First Row Labels -->
        <Label Grid.Row="0" Grid.Column="0" Content="重要且紧急" HorizontalAlignment="Left" VerticalAlignment="Center" 
               FontWeight="Bold" FontSize="16" Foreground="White" Margin="20,0,0,0"/>
        <Label Grid.Row="0" Grid.Column="1" Content="重要不紧急" HorizontalAlignment="Left" VerticalAlignment="Center" 
               FontWeight="Bold" FontSize="16" Foreground="White" Margin="20,0,0,0"/>

        <!-- First Row DataGrids -->
        <DataGrid Grid.Row="1" Grid.Column="0" x:Name="task1" Margin="20,5,10,5" SelectionChanged="task1_SelectionChanged"
                 AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                 FontSize="14" RowHeight="30" HeadersVisibility="Column" IsReadOnly="True"
                 HorizontalGridLinesBrush="#505050" VerticalGridLinesBrush="#505050">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="完成" Binding="{Binding IsActive}" Width="60"/>
                <DataGridTextColumn Header="任务描述" Binding="{Binding Task}" Width="*"/>
                <DataGridTextColumn Header="重要性" Binding="{Binding Importance}" Width="80"/>
                <DataGridTextColumn Header="紧急性" Binding="{Binding Urgency}" Width="80"/>
                <DataGridTextColumn Header="最后修改" Binding="{Binding LastModifiedDate, StringFormat='MM/dd HH:mm'}" Width="120"/>
                <DataGridTextColumn Header="分数" Binding="{Binding Score}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Row="1" Grid.Column="1" x:Name="task2" Margin="10,5,20,5" SelectionChanged="task2_SelectionChanged"
                 AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                 FontSize="14" RowHeight="30" HeadersVisibility="Column" IsReadOnly="True"
                 HorizontalGridLinesBrush="#505050" VerticalGridLinesBrush="#505050">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="完成" Binding="{Binding IsActive}" Width="60"/>
                <DataGridTextColumn Header="任务描述" Binding="{Binding Task}" Width="*"/>
                <DataGridTextColumn Header="重要性" Binding="{Binding Importance}" Width="80"/>
                <DataGridTextColumn Header="紧急性" Binding="{Binding Urgency}" Width="80"/>
                <DataGridTextColumn Header="最后修改" Binding="{Binding LastModifiedDate, StringFormat='MM/dd HH:mm'}" Width="120"/>
                <DataGridTextColumn Header="分数" Binding="{Binding Score}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Second Row Labels -->
        <Label Grid.Row="2" Grid.Column="0" Content="不重要但紧急" HorizontalAlignment="Left" VerticalAlignment="Center" 
               FontWeight="Bold" FontSize="16" Foreground="White" Margin="20,0,0,0"/>
        <Label Grid.Row="2" Grid.Column="1" Content="不重要不紧急" HorizontalAlignment="Left" VerticalAlignment="Center" 
               FontWeight="Bold" FontSize="16" Foreground="White" Margin="20,0,0,0"/>

        <!-- Second Row DataGrids -->
        <DataGrid Grid.Row="3" Grid.Column="0" x:Name="task3" Margin="20,5,10,5" SelectionChanged="task3_SelectionChanged"
                 AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                 FontSize="14" RowHeight="30" HeadersVisibility="Column" IsReadOnly="True"
                 HorizontalGridLinesBrush="#505050" VerticalGridLinesBrush="#505050">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="完成" Binding="{Binding IsActive}" Width="60"/>
                <DataGridTextColumn Header="任务描述" Binding="{Binding Task}" Width="*"/>
                <DataGridTextColumn Header="重要性" Binding="{Binding Importance}" Width="80"/>
                <DataGridTextColumn Header="紧急性" Binding="{Binding Urgency}" Width="80"/>
                <DataGridTextColumn Header="最后修改" Binding="{Binding LastModifiedDate, StringFormat='MM/dd HH:mm'}" Width="120"/>
                <DataGridTextColumn Header="分数" Binding="{Binding Score}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Row="3" Grid.Column="1" x:Name="task4" Margin="10,5,20,5" SelectionChanged="task4_SelectionChanged"
                 AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                 FontSize="14" RowHeight="30" HeadersVisibility="Column" IsReadOnly="True"
                 HorizontalGridLinesBrush="#505050" VerticalGridLinesBrush="#505050">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="完成" Binding="{Binding IsActive}" Width="60"/>
                <DataGridTextColumn Header="任务描述" Binding="{Binding Task}" Width="*"/>
                <DataGridTextColumn Header="重要性" Binding="{Binding Importance}" Width="80"/>
                <DataGridTextColumn Header="紧急性" Binding="{Binding Urgency}" Width="80"/>
                <DataGridTextColumn Header="最后修改" Binding="{Binding LastModifiedDate, StringFormat='MM/dd HH:mm'}" Width="120"/>
                <DataGridTextColumn Header="分数" Binding="{Binding Score}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Buttons Row -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="AddNewTaskButton" Content="添加新任务" Width="180" Height="40" 
                    Click="AddNewTaskButton_Click" FontWeight="SemiBold" FontSize="14" Margin="10,0"/>
            <Button x:Name="DeleteSelectedTaskButton" Content="删除选中任务" Width="180" Height="40" 
                    Click="DeleteSelectedTaskButton_Click" FontWeight="SemiBold" FontSize="14" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
